<div class="help-block errors">
  <% if resource.present? && resource.errors.any? %>
    <%= content_tag :div, class: 'resource-errors', data: {resource_id: resource.id} do %>
      <h4><%= pluralize(resource.errors.count, 'ERROR') %> В ЗДАНИИ, ВСЕМ ПОД СТОЛ!</h4>
      <% resource.errors.full_messages.each do |message| %>
        <li class="single-error"><%= message %></li>
      <% end %>
    <% end %>
  <% end %>
</div>
