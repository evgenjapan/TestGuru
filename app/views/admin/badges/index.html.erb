<h1>Badges</h1>
  <% @badges.each do |badge| %>
    <div>
      <h3><%= badge.title %></h3>
      <%= badge.image %>
      <b><%= badge.rule %></b>
      <%= link_to 'Show', admin_badge_url(badge), class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_admin_badge_url(badge), class: 'btn btn-primary' %>
      <%= link_to 'Destroy', admin_badge_url(badge),
                      method: :delete, data: { confirm: 'Are you sure?' },
                      class: 'btn btn-primary'%>
    </div>
  <% end %>