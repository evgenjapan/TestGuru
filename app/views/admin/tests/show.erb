<p>
  <strong><%= t('.title') %>:</strong>
  <%= @test.title %>
</p>

<p>
  <strong><%= t('.level') %>:</strong>
  <%= @test.level %>
</p>

<p>
  <strong><%= t('.author') %>:</strong>
  <%= @test.author.first_name.html_safe %>   <%= @test.author.last_name.html_safe %>
</p>

<%= link_to t('navigation.edit'), edit_admin_test_path(@test) %> |
<%= link_to t('navigation.back'), admin_tests_path %> |
<%= link_to 'Create question', new_admin_test_question_path(@test) %>

<hr>
<% @test.questions.each_with_index do |question, index| %>
  <div class="single-question">
    <span class="index-question"><%= index + 1 %></span>
    <p>Вопрос: <%= question.body %></p>
    <%= link_to t('navigation.detail'), admin_question_path(question) %>
    <%= link_to "Create new answer", new_admin_question_answer_path(question) %>
  </div>
<% end %>
