<%= form_with(model: [:admin, @question, @answer], local: true) do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :answer_body, rows: 5, cols: 40 %>
  </div>

  <div class="form-group">
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
